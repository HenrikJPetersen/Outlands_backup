foreach id in id_weapon_items
    sysmsg id 2263
    while findtype id backpack as item
        getlabel item description
        if club in description or axe in description or staff in description or mace in description or hammer in description
            pause 259
            if supremely in description or exceedingly in description or extremely in description or eminently in description or slaying in description
                lift item
                pause 250
                drop good_bag -1 -1 -1
                ignore item
                pause 250
            else
                lift item 
                pause 250
                drop bad_bag -1 -1 -1
                ignore item
                pause 250
            endif
        else
            lift item 
            pause 250
            drop bad_bag -1 -1 -1
            ignore item
            pause 250
        endif
    endwhile
endfor