if not listexists crewlist
    createlist crewlist
else
    clearlist crewlist
endif

//Containers//chests
if not varexist powdermonkeys
    @setvar! powdermonkeys
endif
if not varexist pilgrims
    @setvar! pilgrims
endif
if not varexist engineers
    @setvar! engineers
endif
if not varexist hedgemages
    @setvar! hedgemages
endif
if not varexist carpenters
    @setvar! carpenters
endif
if not varexist veterans
    @setvar! veterans
endif
if not varexist others
    @setvar! others
endif
if not varexist speedcrew
    @setvar! speedcrew
endif
if not varexist reavers
    @setvar! reavers
endif
