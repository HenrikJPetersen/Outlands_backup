if findtype 'halberd' backpack as item and not targetexists 
    if targetexists 
        lift item
        drop self righthand
        pause 25
        attack lasttarget 
    else
        sysmsg 'dclicking'
        dclick item
    endif
    pause 25
    attack lasttarget 
elseif findtype 'halberd' backpack as item and targetexists 
        clearhands 'both'
        pause 25
        lift item   
        drop self righthand
        pause 25
        attack lasttarget 
    else
        clearhands 'both'
        hotkey 'Toggle Peace Only'
    endif
else        
    clearhands 'both'
    hotkey 'Toggle Peace Only'
endif